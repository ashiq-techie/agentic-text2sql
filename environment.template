# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Oracle Configuration
ORACLE_DSN=localhost:1521/xe
ORACLE_USERNAME=hr
ORACLE_PASSWORD=password

# Oracle Thick Client Configuration (for Kerberos/advanced features)
# Set to true to use thick client (required for Kerberos)
ORACLE_USE_THICK_CLIENT=false
# Path to Oracle client libraries (optional - uses default if not specified)
ORACLE_LIB_DIR=/path/to/oracle/instantclient
# Set to true to use Kerberos authentication (thick client required)
ORACLE_USE_KERBEROS=false

# Database Parameterization Configuration  
# Default database name for schema introspection
DEFAULT_DATABASE_NAME=oracle_main
# Whether to support multiple databases in single Neo4j instance
SUPPORT_MULTIPLE_DATABASES=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Query Configuration
MAX_QUERY_TIMEOUT=30
MAX_RESULTS_LIMIT=1000

# Schema Inference Configuration
ENABLE_FK_INFERENCE=true
FK_INFERENCE_SIMILARITY_THRESHOLD=0.7

